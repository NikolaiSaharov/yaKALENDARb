<Window x:Class="KALENDAR.ActivitySelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выбор активностей" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Выберите активности:" FontSize="16" Margin="0,0,0,10"/>
            <StackPanel x:Name="stackPanelActivities" Orientation="Vertical"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button x:Name="btnSave" Content="Сохранить" Click="BtnSave_Click" Margin="5"/>
                <Button x:Name="btnCancel" Content="Отмена" Click="BtnCancel_Click" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>